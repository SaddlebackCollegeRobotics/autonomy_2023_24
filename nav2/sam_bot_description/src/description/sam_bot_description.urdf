<?xml version="1.0"?>
<robot name="sam_bot" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Robot Base -->
    <xacro:property name="base_width" value="0.481"/>
    <xacro:property name="base_length" value="0.936"/>
    <xacro:property name="base_height" value="0.178"/>

    <!-- Offset from center of base height -->
    <!-- <xacro:property name="base_footprint_offset" value="${-(base_height / 2) - 0.222}"/> -->

    <!-- Robot Wheels -->
    <xacro:property name="wheel_radius" value="0.174"/>
    <xacro:property name="wheel_width" value="0.103"/>
    <xacro:property name="wheel_ygap" value="0.100"/>
    <xacro:property name="wheel_zoff" value="0.145"/>
    <xacro:property name="wheel_xoff" value="0.420"/>

    <!-- ZED Camera -->
    <xacro:property name="zed_width" value="0.180"/>
    <xacro:property name="zed_length" value="0.043"/>
    <xacro:property name="zed_height" value="0.036"/>

    <!-- LIDAR -->
    <xacro:property name="lidar_radius" value="0.039"/>
    <xacro:property name="lidar_height" value="0.040"/>

    <!-- GNSS Moving Base Antenna -->
    <xacro:property name="gnss_moving_base_radius" value="0.052"/>
    <xacro:property name="gnss_moving_base_height" value="0.045"/>

    <!-- GNSS Moving Rover Antenna -->
    <xacro:property name="gnss_moving_rover_radius" value="0.052"/>
    <xacro:property name="gnss_moving_rover_height" value="0.045"/>

    

    <!-- Robot Base -->
    <link name="base_link">
    <visual>
        <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
        <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
        </material>
    </visual>
    </link>


    <!-- Robot Wheels -->
    <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
        <link name="${prefix}_link">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
            <material name="Gray">
            <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
        </link>

        <joint name="${prefix}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${prefix}_link"/>
        <origin xyz="${x_reflect*wheel_xoff} ${y_reflect*(base_width/2+wheel_ygap)} ${-wheel_zoff}" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>

    <xacro:wheel prefix="drivewhl_bl" x_reflect="-1" y_reflect="1" />
    <xacro:wheel prefix="drivewhl_br" x_reflect="-1" y_reflect="-1" />
    <xacro:wheel prefix="drivewhl_fl" x_reflect="1" y_reflect="1" />
    <xacro:wheel prefix="drivewhl_fr" x_reflect="1" y_reflect="-1" />


    <!-- Robot Footprint -->
    <link name="base_footprint"/>
    
    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0.0 0.0 ${-(wheel_radius+wheel_zoff)}" rpy="0 0 0"/>
    </joint>

    <!-- Robot LIDAR -->
    <link name="lidar_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${lidar_radius}" length="${lidar_height}"/>
            </geometry>
        </visual>
    </link>

    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="${(base_length / 2) + (lidar_radius / 2) + 0.030} 0 ${(base_height / 2) - 0.120 + (lidar_height / 2)}" rpy="0 0 ${pi}"/>
    </joint>

    <!-- Robot ZED 2i Camera -->
    <link name="zed_camera_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${zed_length} ${zed_width} ${zed_height}"/>
            </geometry>
        </visual>
    </link>

    <joint name="zed_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="zed_camera_link"/>
        <origin xyz="${(base_length / 2) - (zed_length / 2)} 0 ${(base_height / 2) + (zed_height / 2)}" rpy="0 0 0"/>
    </joint>

    <!-- GNSS Moving Base Antenna -->
    <link name="gnss_moving_base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${gnss_moving_base_radius}" length="${gnss_moving_base_height}"/>
            </geometry>
        </visual>
    </link>

    <joint name="gnss_moving_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="gnss_moving_base_link"/>
        <origin xyz="${0.127 - (base_length / 2)} ${0.057 - (base_width / 2)} ${(base_height / 2) + (gnss_moving_base_height / 2)}" rpy="0 0 0"/>
    </joint>

     <!-- GNSS Moving Rover Antenna -->
    <link name="gnss_moving_rover_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="${gnss_moving_rover_radius}" length="${gnss_moving_rover_height}"/>
            </geometry>
        </visual>
    </link>

    <joint name="gnss_moving_rover_joint" type="fixed">
        <parent link="base_link"/>
        <child link="gnss_moving_rover_link"/>
        <origin xyz="${(base_length / 2) - 0.127} ${(base_width / 2) - 0.0251} ${(base_height / 2) + (gnss_moving_rover_height / 2)}" rpy="0 0 0"/>
    </joint>

</robot>